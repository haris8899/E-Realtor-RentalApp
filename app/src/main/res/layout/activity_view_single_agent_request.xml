<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdminPackage.ViewSingleAgentRequest">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/agentreqProfileimageview"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:contentDescription="TODO"
        android:src="@drawable/profilelogo"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/agentnameesttext"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="Username"
        android:textColor="@color/txt_Background"
        android:textSize="30dp" />
    <TextView
        android:id="@+id/Agentemailtext"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="Username"
        android:textColor="@color/txt_Background"
        android:textSize="30dp" />

</LinearLayout>